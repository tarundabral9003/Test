yaml
jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up .NET SDK
      uses: actions/setup-dotnet@v3
      with:
        dotnet-version: '7.x'

    - name: Restore dependencies
      run: dotnet restore oops_concept.sln  # Use the .sln file

    - name: Build project
      run: dotnet build oops_concept.sln --configuration Release

    - name: Run tests
      run: dotnet test oops_concept.sln --configuration Release --no-restore --verbosity normal

    - name: Publish artifacts
      run: dotnet publish oops_concept.sln --configuration Release --output ./publish
